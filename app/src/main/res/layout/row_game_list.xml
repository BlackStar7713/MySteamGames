<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"

    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp">


<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">
    <TextView
        android:id="@+id/tv_game_name"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:textAlignment="center"
        android:text="Clash of Clans"
        android:textSize="30sp" />
    
        <ImageView
            android:id="@+id/iv_game_picture"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logo" />


        <TextView
            android:id="@+id/tv_game_time_played"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:text="22,5h"
            android:layout_alignLeft="@id/iv_game_picture"
            android:layout_below="@id/iv_game_picture"/>
        <TextView
            android:id="@+id/tv_game_price_per_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:text="2,54â‚¬/h"
            android:layout_alignRight="@id/iv_game_picture"
            android:layout_below="@id/iv_game_picture" />
    </RelativeLayout>
</android.support.v7.widget.CardView>

