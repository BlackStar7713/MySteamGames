<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"

    android:orientation="vertical"
    tools:context="com.joffreylagut.mysteamgames.mysteamgames.GameDetailsActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp">
        <ImageView
            android:id="@+id/iv_game_details_picture_blured"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/logo"
            android:scaleType="centerCrop"
            android:visibility="invisible"/>
        <ImageView
            android:id="@+id/iv_game_details_picture"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:src="@drawable/logo"
            android:scaleType="centerCrop"
            android:layout_gravity="center"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/tv_title_statistics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/game_details_statistics_title"
                android:paddingLeft="8dp"
                android:paddingStart="8dp"
                android:paddingRight="8dp"
                android:paddingEnd="8dp"
                android:background="@color/profile"
                android:textSize="20sp"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:id="@+id/tv_game_details_time_played_label"
                android:paddingLeft="8dp"
                android:paddingStart="8dp"
                android:paddingRight="8dp"
                android:paddingEnd="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/game_details_time_played"
                android:layout_below="@id/tv_title_statistics"
                />
            <TextView
                android:id="@+id/tv_game_details_time_played"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="225h"
                android:layout_marginLeft="3dp"
                android:layout_below="@id/tv_title_statistics"
                android:layout_toRightOf="@id/tv_game_details_time_played_label"
                />
            <TextView
                android:id="@+id/tv_game_details_game_price_label"
                android:paddingLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- Game price:"
                android:layout_below="@id/tv_game_details_time_played_label"
                />
            <TextView
                android:id="@+id/tv_game_details_game_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25€"
                android:layout_marginLeft="3dp"
                android:layout_below="@id/tv_game_details_time_played_label"
                android:layout_toRightOf="@id/tv_game_details_game_price_label"
                />
            <TextView
                android:id="@+id/tv_game_details_game_price_per_hour_label"
                android:paddingLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- Cost per hour:"
                android:layout_below="@id/tv_game_details_game_price_label"
                android:layout_marginBottom="8dp"
                />
            <TextView
                android:id="@+id/tv_game_details_game_price_per_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0,11€"
                android:layout_marginLeft="3dp"
                android:layout_below="@id/tv_game_details_game_price_label"
                android:layout_toRightOf="@id/tv_game_details_game_price_per_hour_label"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tv_layout_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Price"
            android:inputType="numberDecimal" />
    </android.support.design.widget.TextInputLayout>
    <Button
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="Save"
        android:theme="@style/MaterialButton"
        android:onClick="setGamePrice"/>
        </android.support.v7.widget.LinearLayoutCompat>

    </android.support.v7.widget.CardView>




</LinearLayout>
