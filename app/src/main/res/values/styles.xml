<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="AppTheme.NoTitleActionBar" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Theme for the Splash screen -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="MaterialButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:textColor">@color/colorTextAccent</item>
    </style>

    <style name="MaterialRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="MaterialSubHeading">
        <item name="android:textSize">@dimen/material_sub_heading_text_size</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MaterialCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/card_horizontal_margins</item>
        <item name="android:layout_marginRight">@dimen/card_horizontal_margins</item>
        <item name="android:layout_marginTop">@dimen/card_vertical_margins</item>
        <item name="android:layout_marginBottom">@dimen/card_bottom_margin_for_shadow</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
    </style>

    <style name="GoalsMaterialCard" parent="MaterialCard">
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="GoalsFinishedMaterialCard" parent="MaterialCard">
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="CardViewConstraintLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/card_content_margin</item>
    </style>

    <style name="GoalsCardViewConstraintLayout" parent="CardViewConstraintLayout">
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MaterialCardIcon">
        <item name="android:layout_width">@dimen/card_icon_dimensions</item>
        <item name="android:layout_height">@dimen/card_icon_dimensions</item>
    </style>

    <style name="MaterialCardTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/card_title_layout_width</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/card_title_padding_left_start</item>
        <item name="android:paddingStart" tools:targetApi="jelly_bean_mr1">
            @dimen/card_title_padding_left_start
        </item>
        <item name="android:paddingRight">@dimen/card_title_padding_right_end</item>
        <item name="android:paddingEnd" tools:targetApi="jelly_bean_mr1">
            @dimen/card_title_padding_right_end
        </item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/card_title_small_text_size</item>
    </style>

    <style name="HomeGameRectangleLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:foreground">@drawable/main_view_selector</item>
    </style>

    <style name="HomeGameRectangleDrawable">
        <item name="android:layout_width">@dimen/home_game_rectangle_drawable_size</item>
        <item name="android:layout_height">@dimen/home_game_rectangle_drawable_size</item>
        <item name="android:layout_margin">@dimen/home_game_rectangle_drawable_margins</item>
        <item name="android:background">@drawable/square</item>
        <item name="android:contentDescription">@string/home_rectangle_content_description</item>
    </style>

    <style name="HomeGameTitle">
        <item name="android:layout_width">@dimen/home_game_title_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/home_game_rectangle_title_horizontal_margin
        </item>
        <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">
            @dimen/home_game_rectangle_title_horizontal_margin
        </item>
        <item name="android:layout_marginLeft">@dimen/home_game_rectangle_title_horizontal_margin
        </item>
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">
            @dimen/home_game_rectangle_title_horizontal_margin
        </item>
        <item name="android:layout_marginTop">@dimen/home_game_rectangle_title_margin_top</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="HomeGameProgressionText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">
            @dimen/home_game_rectangle_progression_margin_left_start
        </item>
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">
            @dimen/home_game_rectangle_progression_margin_left_start
        </item>
        <item name="android:paddingBottom">@dimen/home_game_rectangle_progression_padding_bottom
        </item>
    </style>

    <style name="HomeGameProgressionPercent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/home_game_rectangle_progression_percent_margins
        </item>
        <item name="android:textSize">@dimen/home_game_rectangle_progression_percent_text_size
        </item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HomeGameIcon">
        <item name="android:layout_width">@dimen/home_game_icon</item>
        <item name="android:layout_height">@dimen/home_game_icon</item>
        <item name="android:layout_margin">@dimen/home_game_rectangle_progression_percent_margins
        </item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:contentDescription">@string/game_icon_content_description</item>
    </style>

    <style name="HomeGameRank">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/home_game_rectangle_progression_percent_margins
        </item>
    </style>

    <style name="HomeListView">
        <item name="android:layout_width">@dimen/card_list_view_width</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">@dimen/home_page_list_view_margin_top</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">@dimen/home_page_list_view_divider_height</item>
    </style>

    <style name="HomeNoContentTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:drawableTop">@drawable/ic_information</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_marginTop">@dimen/home_page_list_view_margin_top</item>
    </style>

    <style name="FloatingActionButtonLabelStyle">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fab_colorNormal">@color/colorPrimary</item>
    </style>

    <style name="RvGamesSubText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/rv_games_sub_text_margin</item>
    </style>

    <style name="GoalsLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/goals_linear_layout_height</item>
        <item name="android:layout_weight">0</item>
    </style>


    <!-- Account fragment -->
    <style name="ExpandedToolbarUserName">
        <item name="android:textSize">@dimen/account_expanded_toolbar_text_size</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="GlobalStatsTextView">
        <item name="android:layout_width">@dimen/account_global_stats_text_view_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">
            @dimen/account_global_stats_text_view_drawable_padding
        </item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingTop">@dimen/account_global_stats_text_view_vertical_padding
        </item>
        <item name="android:paddingBottom">@dimen/account_global_stats_text_view_vertical_padding
        </item>
    </style>

    <style name="AccountNoContentTextView" parent="HomeNoContentTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/account_no_content_text_view_margins</item>
    </style>

</resources>
